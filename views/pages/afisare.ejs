<!DOCTYPE html>
<html lang="ro">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%-locals.titlu%></title>
    <%- include("../fragments/head") %>
</head>
<body class="d-flex flex-column min-vh-100">
    <%- include("../fragments/header") %>
    <h1 style="display: none;"><%-locals.titlu%></h1>
    <h2><%-locals.titlu%></h2>
    <div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <% for(col of coloane){ %>
                <th scope="col"><%-col%></th>
                <%}%>
                <th>Editare</th>
                <th>È˜tergere</th>
            </tr>
            <tbody>
                <%
                for(rand of locals.valori){
                    date_rand = Object.values(rand)
                %>
                <tr>
                    <% for( val of date_rand){ %>
                    <td> <%-val%></td>
                    <% } %>
                    <td>
                        <button class="editare btn btn-primary">
                            <i class="fa-regular fa-pen-to-square"></i>
                            
                            </button>
                    </td>
                    <td>
                        <button class="stergere btn btn-danger">
                            <i class="fa-regular fa-trash-can"></i>    
                        </button>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </thead>
    </table>
    </div>
    <%- include("../fragments/footer") %>
</body>
</html>